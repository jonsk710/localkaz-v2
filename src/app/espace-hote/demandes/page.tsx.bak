"use client";
import { useEffect, useState } from "react";
import { createClient } from "@supabase/supabase-js";

const supa = createClient(
  process.env.NEXT_PUBLIC_SUPABASE_URL!,
  process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY!
);

type Row = {
  id: string; listing_id: string; title: string;
  guest_id: string | null; check_in: string; check_out: string;
  total: number | null; note: string | null; created_at: string;
};

export default function HostRequestsPage() {
  const [rows, setRows] = useState<Row[]>([]);
  const [loading, setLoading] = useState(true);
  const [err, setErr] = useState<string | null>(null);

  async function load() {
    setLoading(true); setErr(null);
    const { data: { user } } = await supa.auth.getUser();
    if (!user) { setErr("Vous devez être connecté."); setLoading(false); return; }
    const { data, error } = await supa.rpc("host_list_pending_as", { p_actor: user.id });
    if (error) setErr(error.message);
    else setRows(data ?? []);
    setLoading(false);
  }

  useEffect(() => { load(); }, []);

  async function decide(id: string, action: "approve"|"decline") {
    const r = await fetch(`/api/host/bookings/${action}`, {
      method: "POST",
      headers: { "content-type": "application/json" },
      body: JSON.stringify({ booking_id: id })
    });
    const j = await r.json();
    if (!r.ok) { alert(j.error || "Erreur"); return; }
    setRows(rs => rs.filter(x => x.id !== id));
  }

  return (
    <main className="max-w-5xl mx-auto px-4 py-8 space-y-4">
      <h1 className="text-2xl font-bold">Demandes de réservation</h1>
      {err && <div className="text-red-600 text-sm">Erreur: {err}</div>}
      {loading ? <p>Chargement…</p> : rows.length === 0 ? <p>Aucune demande en attente.</p> : (
        <table className="w-full text-sm border">
          <thead className="bg-gray-50">
            <tr>
              <th className="p-2 text-left">Annonce</th>
              <th className="p-2">Du</th><th className="p-2">Au</th>
              <th className="p-2">Total</th>
              <th className="p-2">Note</th>
              <th className="p-2">Actions</th>
            </tr>
          </thead>
          <tbody>
            {rows.map(r => (
              <tr key={r.id} className="border-t">
                <td className="p-2">{r.title}</td>
                <td className="p-2">{r.check_in}</td>
                <td className="p-2">{r.check_out}</td>
                <td className="p-2">{r.total ?? "—"} €</td>
                <td className="p-2">{r.note ?? ""}</td>
                <td className="p-2">
                  <div className="flex gap-2 justify-center">
                    <button onClick={()=>decide(r.id,"approve")} className="px-3 py-1 border rounded">Accepter</button>
                    <button onClick={()=>decide(r.id,"decline")} className="px-3 py-1 border rounded">Refuser</button>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      )}
    </main>
  );
}
